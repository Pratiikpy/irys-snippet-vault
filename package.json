{
  "name": "irys-snippet-vault",
  "version": "1.0.0",
  "description": "A decentralized snippet vault built with Irys blockchain",
  "main": "main.py",
  "scripts": {
    "start": "python main.py",
    "dev": "python main.py",
    "install": "pip install -r requirements.txt && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "backend": "cd backend && python -m uvicorn server:app --host 0.0.0.0 --port 8000 --reload",
    "frontend": "cd frontend && npm start"
  },
  "keywords": [
    "blockchain",
    "irys",
    "decentralized",
    "snippet",
    "vault",
    "social",
    "ai"
  ],
  "author": "Irys Snippet Vault Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/irys-snippet-vault.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.11.0"
  },
  "replit": {
    "language": "python3",
    "run": "python main.py"
  }
}